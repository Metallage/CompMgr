<UserControl x:Class="CompMgr.CurrentSoftUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompMgr"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400"
             FontSize="18"
             FontFamily="Times New Roman">
    <UniformGrid Rows="3" Columns="2">
        <TextBlock Text="Наименование ПО:" TextAlignment="Center"/>
        <TextBlock Text="Версия ПО:" TextAlignment="Center" HorizontalAlignment="Center" />
        <TextBox x:Name="SoftName"/>
        <TextBox x:Name="SoftVersion"/>
        <Button x:Name="SaveButton" Content="Сохранить"/>
        <Button x:Name="DeleteButton" Content="Удалить"/>
    </UniformGrid>
</UserControl>
